-- Get skin helper
local function getSkin(player)
	local char = player.Character
	if not char then return player.DisplayName end

	for _, loc in pairs({player, char}) do
		for _, v in pairs(loc:GetChildren()) do
			local n = v.Name:lower()
			if (n:find("skin") or n:find("morph") or n:find("outfit")) then
				if v:IsA("StringValue") or v:IsA("IntValue") then
					return tostring(v.Value)
				end
			end
			if v:IsA("Folder") then
				for _, sv in pairs(v:GetChildren()) do
					local sn = sv.Name:lower()
					if (sn:find("skin") or sn:find("morph") or sn:find("outfit") or sn:find("char")) then
						if sv:IsA("StringValue") or sv:IsA("IntValue") then
							return tostring(sv.Value)
						end
					end
				end
			end
		end
	end

	local ls = player:FindFirstChild("leaderstats")
	if ls then
		for _, v in pairs(ls:GetChildren()) do
			if v.Name:lower():find("skin") or v.Name:lower():find("char") then
				return tostring(v.Value)
			end
		end
	end

	if char.Name ~= player.Name then return char.Name end
	return player.DisplayName
end

-- Set thumbnail
local function setThumb(userId)
	local ok, url = pcall(function()
		return Players:GetUserThumbnailAsync(tonumber(userId), Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size100x100)
	end)
	if ok and url then
		thumbImg.Image = url
	else
		thumbImg.Image = ""
	end
end

-- Select player
local function selectPlayer(targetPlayer)
	selName = targetPlayer.Name
	selId = tostring(targetPlayer.UserId)
	selSkin = getSkin(targetPlayer)
	nameLbl.Text = "Name: " .. selName
	idLbl.Text = "ID: " .. selId
	skinLbl.Text = "Skin: " .. selSkin
	idInput.Text = selId
	skinInput.Text = selSkin
	resLbl.Text = "Selected!"
	resLbl.TextColor3 = Color3.fromRGB(100, 255, 100)
	setThumb(selId)
end

-- Click detection (desktop)
local mouse = LP:GetMouse()
mouse.Button1Down:Connect(function()
	if not toggleOn then return end
	local t = mouse.Target
	if not t then return end
	local char = t:FindFirstAncestorOfClass("Model")
	if not char then return end
	local tp = Players:GetPlayerFromCharacter(char)
	if tp and tp ~= LP then selectPlayer(tp) end
end)

-- Touch detection (mobile) - uses separate tracking to avoid drag conflicts
UIS.TouchTapInWorld:Connect(function(pos, processed)
	if not toggleOn or processed then return end
	local cam = workspace.CurrentCamera
	local ray = cam:ViewportPointToRay(pos.X, pos.Y)
	local params = RaycastParams.new()
	params.FilterType = Enum.RaycastFilterType.Exclude
	params.FilterDescendantsInstances = {LP.Character}
	local res = workspace:Raycast(ray.Origin, ray.Direction * 500, params)
	if res and res.Instance then
		local char = res.Instance:FindFirstAncestorOfClass("Model")
		if char then
			local tp = Players:GetPlayerFromCharacter(char)
			if tp and tp ~= LP then selectPlayer(tp) end
		end
	end
end)

-- Load offline player
loadBtn.MouseButton1Click:Connect(function()
	local inputId = idInput.Text:gsub("%s", "")
	local inputSkin = skinInput.Text

	if inputId == "" then
		resLbl.Text = "Enter a Player ID!"
		resLbl.TextColor3 = Color3.fromRGB(255, 200, 50)
		return
	end

	if not tonumber(inputId) then
		resLbl.Text = "ID must be a number!"
		resLbl.TextColor3 = Color3.fromRGB(255, 80, 80)
		return
	end

	-- Try to get username from ID
	local ok, name = pcall(function()
		return Players:GetNameFromUserIdAsync(tonumber(inputId))
	end)

	if ok and name then
		selName = name
		selId = inputId
		selSkin = inputSkin ~= "" and inputSkin or name
		nameLbl.Text = "Name: " .. selName
		idLbl.Text = "ID: " .. selId
		skinLbl.Text = "Skin: " .. selSkin
		setThumb(selId)
		resLbl.Text = "Loaded: " .. name
		resLbl.TextColor3 = Color3.fromRGB(180, 150, 255)
	else
		selName = "Unknown"
		selId = inputId
		selSkin = inputSkin ~= "" and inputSkin or "Unknown"
		nameLbl.Text = "Name: Unknown"
		idLbl.Text = "ID: " .. selId
		skinLbl.Text = "Skin: " .. selSkin
		setThumb(selId)
		resLbl.Text = "ID set (name lookup failed)"
		resLbl.TextColor3 = Color3.fromRGB(255, 200, 50)
	end
end)

-- Morph button
morphBtn.MouseButton1Click:Connect(function()
	local fId = idInput.Text:gsub("%s", "")
	local fSkin = skinInput.Text

	if fId == "" and selId == "" then
		resLbl.Text = "No player selected or ID entered!"
		resLbl.TextColor3 = Color3.fromRGB(255, 200, 50)
		return
	end

	local useId = fId ~= "" and fId or selId
	local useSkin = fSkin ~= "" and fSkin or selSkin

	if useSkin == "" then
		resLbl.Text = "No skin data!"
		resLbl.TextColor3 = Color3.fromRGB(255, 80, 80)
		return
	end

	-- Save position before morph
	local savedCFrame = nil
	if LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
		savedCFrame = LP.Character.HumanoidRootPart.CFrame
	end

	-- Fire morph
	local args = {
		[1] = useId,
		[2] = useSkin
	}

	local ok, err = pcall(function()
		RS.SendCharMorphEvent:FireServer(unpack(args))
	end)

	if ok then
		morphBtn.BackgroundColor3 = Color3.fromRGB(30, 180, 80)
		morphBtn.Text = "SENT!"
		resLbl.Text = "Morphing..."
		resLbl.TextColor3 = Color3.fromRGB(100, 200, 255)

		-- Teleport back after 0.5 seconds
		task.delay(0.5, function()
			if savedCFrame and LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
				LP.Character.HumanoidRootPart.CFrame = savedCFrame
			end
			resLbl.Text = "Morph done + teleported back!"
			resLbl.TextColor3 = Color3.fromRGB(100, 255, 100)
		end)

		task.delay(1.5, function()
			morphBtn.BackgroundColor3 = Color3.fromRGB(40, 110, 190)
			morphBtn.Text = "MORPH"
		end)
	else
		resLbl.Text = "Error: " .. tostring(err)
		resLbl.TextColor3 = Color3.fromRGB(255, 80, 80)
	end
end)

-- Open animation
MF.Size = UDim2.new(0, 0, 0, 0)
MF.Position = UDim2.new(0.5, 0, 0.5, 0)
MF:TweenSizeAndPosition(UDim2.new(0, 240, 0, 360), UDim2.new(0.5, -120, 0.5, -180), Enum.EasingDirection.Out, Enum.EasingStyle.Back, 0.4, true)
